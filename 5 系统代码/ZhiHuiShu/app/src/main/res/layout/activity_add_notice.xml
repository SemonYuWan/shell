<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notice.AddNoticeActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/notice_title_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入标题"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/notice_context_editText"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="请输入内容" />

        <EditText
            android:id="@+id/notice_type_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入类型"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/notice_remark_editText"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入备注"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/add_notice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="发布通知"
            android:textSize="18sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>